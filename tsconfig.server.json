{
  "compilerOptions": {
    "target": "ES2020",
    "module": "CommonJS",
    "moduleResolution": "Node",
    "esModuleInterop": true,
    "strict": true,
    "skipLibCheck": true,
    "outDir": "dist",
    "rootDir": "src",
    "allowJs": true,
    "resolveJsonModule": true,
    "types": ["node", "express", "cors"]
  },
  "include": ["src/server.ts", "src/jokes.ts"],
  "exclude": ["node_modules"]
} 